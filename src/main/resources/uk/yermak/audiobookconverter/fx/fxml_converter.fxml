<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Screen?>
<VBox fx:controller="uk.yermak.audiobookconverter.fx.Controller"
      xmlns:fx="http://javafx.com/fxml"

      fx:id="root"
      prefHeight="${screen.visualBounds.height * 0.65}" prefWidth="${screen.visualBounds.width * 0.30}"
      minHeight="${screen.visualBounds.height * 0.65}" minWidth="${screen.visualBounds.width * 0.30}"
>
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>

    </fx:define>


    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <!-- <columnConstraints>
         <ColumnConstraints hgrow="ALWAYS" prefWidth="${root.width}"/>
     </columnConstraints>-->


    <GridPane xmlns:fx="http://javafx.com/fxml" hgap="5" vgap="0" gridLinesVisible="false">
        <columnConstraints>
            <!--<ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" percentWidth="60.0" prefWidth="60.0"/>-->
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <children>
            <Label text="AudioBookConverter V2"
                   GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2" alignment="TOP_LEFT"
                   GridPane.valignment="TOP">
                <font>
                    <Font name="Arial Black" size="24.0"/>
                </font>
            </Label>

            <Hyperlink text="Website" onAction="#openLink"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       GridPane.valignment="TOP" GridPane.halignment="RIGHT">
                <tooltip>
                    <Tooltip text="https://github.com/yermak/AudioBookConverter"/>
                </tooltip>
            </Hyperlink>
            <Hyperlink text="About this software" onAction="#openLink"
                       GridPane.columnIndex="2" GridPane.rowIndex="0"
                       GridPane.valignment="TOP" GridPane.halignment="LEFT">
                <tooltip>
                    <Tooltip text="https://github.com/yermak/AudioBookConverter/wiki/About"/>
                </tooltip>
            </Hyperlink>
            <Hyperlink text="Help" onAction="#openLink"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       GridPane.valignment="TOP" GridPane.halignment="RIGHT">
                <tooltip>
                    <Tooltip text="https://github.com/yermak/AudioBookConverter/wiki/Help"/>
                </tooltip>
            </Hyperlink>
            <Hyperlink text="Check for updates" onAction="#openLink"
                       GridPane.columnIndex="2" GridPane.rowIndex="1"
                       GridPane.valignment="TOP" GridPane.halignment="LEFT">
                <tooltip>
                    <Tooltip text="https://github.com/yermak/AudioBookConverter/releases"/>
                </tooltip>
            </Hyperlink>
        </children>
    </GridPane>

    <TitledPane text="Add MP3 files to convert and bring them in right order..." collapsible="false">

        <GridPane xmlns:fx="http://javafx.com/fxml" hgap="5" vgap="5" gridLinesVisible="false">
            <columnConstraints>
                <!--<ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" percentWidth="60.0" prefWidth="60.0"/>-->
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <children>
                <ListView GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="6"
                          GridPane.valignment="TOP">

                </ListView>
                <Button text="Add" minWidth="${screen.visualBounds.width * 0.05}"
                        GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.valignment="TOP">
                    <tooltip>
                        <Tooltip text="Add files for conversion to the list"/>
                    </tooltip>
                </Button>
                <Button text="Remove" minWidth="${screen.visualBounds.width * 0.05}"
                        GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP">
                    <tooltip>
                        <Tooltip text="Removes selected files from the list"/>
                    </tooltip>
                </Button>
                <Button text="Clear" minWidth="${screen.visualBounds.width * 0.05}"
                        GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP">
                    <tooltip>
                        <Tooltip text="Remove all files from the list"/>
                    </tooltip>
                </Button>
                <Button text="Up" minWidth="${screen.visualBounds.width * 0.05}"
                        GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <tooltip>
                        <Tooltip text="Move selected file up"/>
                    </tooltip>
                </Button>
                <Button text="Down" minWidth="${screen.visualBounds.width * 0.05}"
                        GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.valignment="TOP">
                    <tooltip>
                        <Tooltip text="Move selected file down"/>
                    </tooltip>
                </Button>

            </children>
        </GridPane>
    </TitledPane>


    <TabPane minHeight="${screen.visualBounds.height*0.25}" prefHeight="${screen.visualBounds.height*0.25}">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Tab text="Conversion mode" closable="false">
            <VBox>
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <fx:define>
                    <ToggleGroup fx:id="mode"/>
                </fx:define>
                <RadioButton text="Join" toggleGroup="$mode"/>
                <RadioButton text="Batch" toggleGroup="$mode"/>
                <RadioButton text="Parallel" toggleGroup="$mode" selected="true"/>
            </VBox>
        </Tab>
        <Tab text="Book Info" closable="false">
            <GridPane xmlns:fx="http://javafx.com/fxml" hgap="5" vgap="5"
                      minHeight="${screen.visualBounds.height*0.2}" prefHeight="${screen.visualBounds.height*0.2}"
                      gridLinesVisible="false">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <columnConstraints>
                    <!--<ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" percentWidth="60.0" prefWidth="60.0"/>-->
                    <ColumnConstraints hgrow="SOMETIMES"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                </columnConstraints>
                <children>

                    <Label text="Title" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>
                    <Label text="Writer" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="RIGHT"/>
                    <Label text="Narrator" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="RIGHT"/>
                    <Label text="Genre" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="RIGHT"/>

                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Series" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="RIGHT"/>
                    <Label text="Book #" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.halignment="RIGHT"/>
                    <Label text="Year" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.halignment="RIGHT"/>
                    <Label text="Comment" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.halignment="RIGHT"/>

                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                    <TextField GridPane.columnIndex="3" GridPane.rowIndex="3"/>

                </children>
            </GridPane>
        </Tab>
    </TabPane>


    <Button text="Start Conversion" minWidth="${screen.visualBounds.width * 0.1}"
            minHeight="${screen.visualBounds.height*0.05}"
            alignment="CENTER">
        <tooltip>
            <Tooltip text="Start conversion of files"/>
        </tooltip>
    </Button>

</VBox>