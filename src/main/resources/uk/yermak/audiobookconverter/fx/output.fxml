<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.Screen?>
<GridPane xmlns:fx="http://javafx.com/fxml" hgap="5" vgap="10"
          fx:controller="uk.yermak.audiobookconverter.fx.OutputController"
          gridLinesVisible="false">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <columnConstraints>
        <!--<ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" percentWidth="60.0" prefWidth="60.0"/>-->
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="NEVER"/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="NEVER"/>
    </columnConstraints>
    <children>
        <fx:define>
            <ToggleGroup fx:id="br"/>
        </fx:define>

        <Label text="Split book into equal parts" GridPane.columnIndex="0" GridPane.rowIndex="0"
               GridPane.halignment="LEFT"/>
        <Label text="Frequency, kHz" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="LEFT"/>


        <Spinner fx:id="parts" GridPane.columnIndex="1" GridPane.rowIndex="0" min="1" max="10"
                 maxWidth="80" editable="true"/>
        <Spinner fx:id="frequency" GridPane.columnIndex="1" GridPane.rowIndex="1" min="22" max="48" maxWidth="80" initialValue="44" editable="true"/>


        <Label text="Use quality of source files" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="LEFT"/>

        <Label text="Channels" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.halignment="LEFT"/>


        <CheckBox fx:id="auto" GridPane.columnIndex="3" GridPane.rowIndex="0" selected="true"/>
        <Spinner fx:id="channels" GridPane.columnIndex="3" GridPane.rowIndex="1" min="1" max="2" maxWidth="80" initialValue="2"/>


        <RadioButton fx:id="cbr" text="Constant bitrate, kBs/s" GridPane.columnSpan="2"
                     GridPane.columnIndex="0" GridPane.rowIndex="2"
                     toggleGroup="$br" onAction="#cbr" selected="true" wrapText="true" GridPane.halignment="LEFT"/>
        <RadioButton fx:id="vbr" text="Variable bitrate, Quality" GridPane.columnSpan="2"
                     GridPane.columnIndex="2" GridPane.rowIndex="2"
                     toggleGroup="$br" onAction="#vbr" wrapText="true" GridPane.halignment="LEFT"/>






        <Spinner fx:id="bitRate" GridPane.columnIndex="0" GridPane.rowIndex="3" min="32" max="512" initialValue="128"
                 maxWidth="80" GridPane.columnSpan="2" GridPane.halignment="RIGHT" editable="true"/>

        <Slider fx:id="quality" GridPane.columnIndex="2" GridPane.rowIndex="3" min="1" max="5" GridPane.columnSpan="2" value="4"
                showTickMarks="true" showTickLabels="true" majorTickUnit="1" snapToTicks="true" minorTickCount="0"/>

    </children>
</GridPane>